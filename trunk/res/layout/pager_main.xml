<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/list_item_bg_color"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@id/layout_close"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.0dip"
                android:layout_marginTop="7.0dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@id/img_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/item_phone_lock" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:gravity="bottom"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/tv_tips"
                        style="@style/text_middle_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@id/btn_activate"
                        android:layout_width="fill_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="4.0dip"
                        android:background="@drawable/button_common_orange_bg"
                        android:text="@string/activate" />

                    <Button
                        android:id="@id/btn_deactivate"
                        android:layout_width="fill_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="4.0dip"
                        android:background="@drawable/button_common_green_bg"
                        android:text="@string/activated"
                        android:visibility="gone" />

                    <TextView
                        android:id="@id/tv_help"
                        style="@style/text_middle_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="2.0dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@id/bottom_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:background="@drawable/setting_title_bg"
                    android:orientation="horizontal"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip" >

                    <TextView
                        style="@style/text_middle_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="4.0dip"
                        android:text="TUI Security Feature" />
                </LinearLayout>

                <include
                    android:id="@id/main_item1"
                    layout="@layout/list_item_antitheft" />

                <include
                    android:id="@id/main_item2"
                    layout="@layout/list_item_antitheft" />

                <include
                    android:id="@id/main_item3"
                    layout="@layout/list_item_antitheft" />

                <include
                    android:id="@id/main_item4"
                    layout="@layout/list_item_antitheft" />

                <include
                    android:id="@id/main_item5"
                    layout="@layout/list_item_antitheft" />

                <include
                    android:id="@id/main_item6"
                    layout="@layout/list_item_antitheft" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>