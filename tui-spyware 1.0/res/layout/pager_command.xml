<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:fadingEdge="none"
            android:hapticFeedbackEnabled="false"
            android:paddingTop="10.0dip">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!-- Urgent case  -->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="5dip">

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="5dip">

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.0"
                            android:background="@drawable/setting_title_bg"
                            android:orientation="horizontal"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip">

                        <TextView
                                style="@style/text_middle_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="4.0dip"
                                android:text="@string/pager_command_basic_title"
                                android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                        android:id="@id/btnPhoneRing"
                        style="@style/ButtonText"
                        android:background="@drawable/button_red"
                        android:text="Phone Sound Alert &amp; Lock" android:layout_marginLeft="-73dp"
                        android:layout_width="match_parent"/>

                <Button
                        android:id="@id/btnRemoteFormat"
                        style="@style/ButtonText"
                        android:background="@drawable/button_blue"
                        android:text="Remote Format"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip">

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/setting_title_bg"
                        android:orientation="horizontal"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10.0dip">

                    <TextView
                            style="@style/text_middle_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="4.0dip"
                            android:text="@string/feature_phone_control"
                            android:textStyle="bold"/>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="5dip">
                <Button
                        android:id="@id/btnAutoRecording"
                        style="@style/ButtonText"
                        android:background="@drawable/button_yellow"
                        android:text="Auto Recording"/>

                <Button
                        android:id="@id/btnVictimData"
                        style="@style/ButtonText"
                        android:background="@drawable/button_yellow"
                        android:text="Get Victim Data"/>

                <Button
                        android:id="@id/btnGetLocation"
                        style="@style/ButtonText"
                        android:background="@drawable/button_green"
                        android:text="Get Victim Location"/>

                <Button
                        android:id="@id/btnGetSimInfo"
                        style="@style/ButtonText"
                        android:background="@drawable/button_green"
                        android:text="Get SIM Owner Information"/>

                <Button
                        android:id="@id/btnRequestSendSms"
                        style="@style/ButtonText"
                        android:background="@drawable/button_green"
                        android:text="Request Send SMS"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>